<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="¡Bienvenido!"
        android:textColor="#006064"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewUsuario"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="Imagen de usuario"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textViewUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        tools:text="Mario García" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12px"

        >
        <Button
            android:layout_weight="2"
            android:id="@+id/buttonAlumnos"
            android:layout_margin="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0097A7"
            android:paddingVertical="12dp"
            android:text="Alumnos"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <Button
            android:layout_weight="2"
            android:id="@+id/buttonMaterias"
            android:layout_margin="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0097A7"
            android:paddingVertical="12dp"
            android:text="Materias"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="12px"
        >
        <Button
            android:layout_weight="2"
            android:id="@+id/buttonCalificar"
            android:layout_margin="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0097A7"
            android:paddingVertical="12dp"
            android:text="Calificar"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <Button
            android:layout_weight="2"
            android:id="@+id/buttonVerNotas"
            android:layout_margin="12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0097A7"
            android:paddingVertical="12dp"
            android:text="VerNotas"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00446a"
        android:paddingVertical="12dp"
        android:text="CERRAR SESIÓN"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>